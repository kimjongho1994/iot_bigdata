#include <stdio.h>

void main(){
	int num=7;
	int *pnum;
	pnum = &num;

	printf("num: %d\n", num);
	// &p 주소값을 출력하기 위한 옵션
	// 일반 변수를 선언하고 해당 변수의 주소값을 보려면
	// &[변수명]
	// ex) int num=7; => &num
	printf("&num: %p\n", &num);
	// 포인터 변수를 선언하고 해당 변수의 주소값을 보려면
	// 해당 변수명만 사용하면 된다.
	// ex) int *pnum; => pnum
	printf("pnum: %p\n", pnum);
	printf("pnum이 가리키는 값: %d\n", *pnum);
/* 출력결과
 
 ㅜㅕ
 */
}
